// scripts.js ‚Äì demo mode for ALEX tool
document.addEventListener("DOMContentLoaded", () => {
      const runTestBtn = document.getElementById("runTest");
        if (!runTestBtn) return;

          runTestBtn.addEventListener("click", async () => {
                const loader = document.getElementById("loader");
                    loader.classList.add("show");

                        // Simulated processing delay
                            await new Promise(resolve => setTimeout(resolve, 2500));

                                loader.classList.remove("show");

                                    // Fake analysis data
                                        const fakeResult = {
                                                  property: "Sample Property",
                                                        roi: (Math.random() * 12 + 3).toFixed(2) + "%",
                                                              risk: ["Low", "Moderate", "High"][Math.floor(Math.random() * 3)],
                                                                    suggestion: ["Proceed", "Renegotiate", "Hold"][Math.floor(Math.random() * 3)]
                                        };

                                            alert(`üè† ${fakeResult.property}\nROI: ${fakeResult.roi}\nRisk: ${fakeResult.risk}\nVerdict: ${fakeResult.suggestion}`);
          });
});
                                        }
          })
})